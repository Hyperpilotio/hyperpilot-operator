                                            "path": "\/var\/lib\/docker\/"
                                        },
                                        "name": "var-lib-docker"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/log"
                                        },
                                        "name": "var-log"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run"
                                        },
                                        "name": "var-run"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/usr\/bin\/docker"
                                        },
                                        "name": "usr-bin-docker"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/proc"
                                        },
                                        "name": "proc"
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "snap-goddd1"
            },
