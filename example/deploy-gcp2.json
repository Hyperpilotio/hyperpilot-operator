{
    "name": "resource-worker-service",
    "region": "us-west1-a",
    "clusterType": "GCP",
    "clusterDefinition": {
        "nodes": [
            {
                "instanceType": "n1-standard-4",
                "id": 1
            },
            {
                "instanceType": "n1-standard-4",
                "id": 2
            },
            {
                "instanceType": "n1-standard-4",
                "id": 3
            },
            {
                "instanceType": "n1-standard-4",
                "id": 4
            },
            {
                "instanceType": "n1-standard-4",
                "id": 5
            }
        ]
    },
    "nodeMapping": [
        {
            "task": "slow-cooker",
            "id": 1
        },
        {
            "task": "benchmark-agent",
            "id": 3
        },
        {
            "task": "benchmark-agent",
            "id": 4
        },
        {
            "task": "benchmark-agent",
            "id": 5
        },
        {
            "task": "influxsrv",
            "id": 2
        },
        {
            "task": "snap-goddd1",
            "id": 3
        },
        {
            "task": "snap-goddd2",
            "id": 4
        },
        {
            "task": "snap-goddd3",
            "id": 5
        }
    ],
    "kubernetes": {
        "taskDefinitions": [
            {
                "statefulSet": {
                    "apiVersion": "apps\/v1beta1",
                    "kind": "StatefulSet",
                    "metadata": {
                        "name": "resource-worker"
                    },
                    "spec": {
                        "serviceName": "resource-worker",
                        "replicas": 3,
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "resource-worker"
                                }
			    },
                            "spec": {
                                "affinity": {
                                    "nodeAffinity": {
                                        "requiredDuringSchedulingIgnoredDuringExecution": {
                                            "nodeSelectorTerms": [
						{
						    "matchExpressions": [
                                                        {
							    "key": "hyperpilot\/node-id",
                                                            "operator": "In",
                                                            "values": [
                                                                "3",
								"4",
								"5"
                                                            ]
                                                        }
                                                    ]
						}
                                            ]
                                        }
                                    },
                                    "podAntiAffinity": {
                                        "requiredDuringSchedulingIgnoredDuringExecution": [
                                            {
                                                "labelSelector": {
                                                    "matchExpressions": [
                                                        {
                                                            "key": "app",
                                                            "operator": "In",
                                                            "values": [
                                                                "resource-worker"
                                                            ]
                                                        }
                                                    ]
                                                },
                                                "topologyKey": "kubernetes.io\/hostname"
                                            }
                                        ]
                                    }
                                },
                                "initContainers": [
                                    {
                                        "name": "label-pods",
                                        "command": [
                                            "sh",
                                            "-c",
                                            "\/usr\/local\/bin\/kubectl label pods ${HOSTNAME} podId=${HOSTNAME}"
                                        ],
                                        "image": "wernight\/kubectl"
                                    }
                                ],
                                "containers": [
                                    {
                                        "name": "resource-worker",
                                        "imagePullPolicy": "Always",
                                        "image": "hyperpilot\/resource-worker-service",
                                        "ports": [
                                            {
                                                "containerPort": 7998,
                                                "hostPort": 7998,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/host_proc",
                                                "name": "procfs"
                                            }
                                        ],
                                        "resources": {
                                            "limits": {
                                                "cpu": "1000m",
                                                "memory": "2048Mi"
                                            }
                                        },
                                        "env": [
                                            {
                                                "name": "HOST_PROC",
                                                "value": "\/host_proc"
                                            }
                                        ]
                                    }
                                ],
                                "volumes": [
                                    {
                                        "name": "procfs",
                                        "hostPath": {
                                            "path": "\/proc"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "resource-worker",
                "portTypes": [
                    1
                ]
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "influxsrv"
                        },
                        "name": "influxsrv"
                    },
                    "spec": {
                        "replicas": 1,
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "influxsrv"
                                }
                            },
                            "spec": {
                                "hostname": "influxsrv",
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "~\/influx_data"
                                        },
                                        "name": "influx-data"
                                    }
                                ],
                                "containers": [
                                    {
                                        "env": [
                                            {
                                                "name": "ADMIN_USER",
                                                "value": "root"
                                            },
                                            {
                                                "name": "PRE_CREATE_DB",
                                                "value": "snap;spark;snapaverage"
                                            },
                                            {
                                                "name": "INFLUXDB_INIT_PWD",
                                                "value": "default"
                                            }
                                        ],
                                        "image": "hyperpilot\/influx:1.3.6",
                                        "name": "influxsrv",
                                        "ports": [
                                            {
                                                "containerPort": 8083,
                                                "hostPort": 8083,
                                                "protocol": "TCP"
                                            },
                                            {
                                                "containerPort": 8086,
                                                "hostPort": 8086,
                                                "protocol": "TCP"
                                            },
                                            {
                                                "containerPort": 8088,
                                                "hostPort": 8088,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/var\/lib\/influxdb",
                                                "name": "influx-data"
                                            }
                                        ],
                                        "resources": {
                                            "requests": {
                                                "cpu": "2000m",
                                                "memory": "4096Mi"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "influxsrv",
                "portTypes": [
                    1,
                    1,
                    1
                ]
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "slow-cooker"
                        },
                        "name": "slow-cooker"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "slow-cooker"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "slow-cooker"
                                }
                            },
                            "spec": {
                                "hostname": "slow-cooker",
                                "containers": [
                                    {
                                        "imagePullPolicy": "Always",
                                        "image": "hyperpilot\/slow_cooker",
                                        "name": "slow-cooker",
                                        "ports": [
                                            {
                                                "containerPort": 8081,
                                                "hostPort": 8081,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "args": [
                                            "-mode",
                                            "server",
                                            "-v",
                                            "1",
                                            "-logtostderr"
                                        ],
                                        "resources": {
                                            "requests": {
                                                "cpu": "500m",
                                                "memory": "100Mi"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "slow-cooker"
            },
